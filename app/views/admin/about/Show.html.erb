<div class="main-content" style="padding-top:30px">
    <div class="section__content section__content--p30">
        <div class="col-lg-12">
        </div>

        <div class="col-lg-12">
          <div class="container-fluid">
              <div class="row">

                  <!--  Right form -->
                  <div class="col-lg-6">
                      <div class="card">
                          <div class="card-header">
                              <strong>Persionnal Infomation</strong>
                          </div>
                          <div class="card-body card-block">
                              <form action="" method="post" enctype="multipart/form-data" class="form-horizontal">
                                  <div class="row form-group">
                                      <div class="col col-md-3">
                                          <label for="major-input" class=" form-control-label">Major</label>
                                      </div>
                                      <div class="col-12 col-md-9">
                                          <input type="text" id="major-input" name="major-input" placeholder="Type your major" class="form-control" value="<%= @persionalInfo.major %>">
                                          <small class="form-text text-muted">*Change this will change your major</small>
                                      </div>
                                  </div>
                                  <div class="row form-group">
                                      <div class="col col-md-3">
                                          <label for="email-input" class=" form-control-label">Email</label>
                                      </div>
                                      <div class="col-12 col-md-9">
                                          <input type="email" id="email-input" name="password-input" placeholder="Type your email" class="form-control" value="<%= @persionalInfo.email %>">
                                          <small class="form-text text-muted">*Change this will change your email</small>
                                      </div>
                                  </div>
                                  <div class="row form-group">
                                      <div class="col col-md-3">
                                          <label for="number-input" class=" form-control-label">Phone number</label>
                                      </div>
                                      <div class="col-12 col-md-9">
                                          <input type="text" id="number-input" name="number-input" placeholder="Type your phone mumber" class="form-control" value="<%= @persionalInfo.phone %>">
                                          <small class="form-text text-muted">*Change this will change your phone number</small>
                                      </div>
                                  </div>
                                  <div class="row form-group">
                                      <div class="col col-md-3">
                                          <label for="about-input" class=" form-control-label">About</label>
                                      </div>
                                      <div class="col-12 col-md-9">
                                          <textarea id="about-input" name="about-input" placeholder="Type about here" style="height:200px" class="form-control"><%= @persionalInfo.about %></textarea>
                                          <small class="form-text text-muted">*Change this will change your about</small>
                                      </div>
                                  </div>

                              </form>
                          </div>
                          <div class="card-footer">
                              <button type="submit" class="btn btn-primary btn-sm">
                                  <i class="fa fa-dot-circle-o"></i> Save change
                              </button>
                          </div>
                      </div>
                  </div>

                  <!-- Left form -->
                  <div class="col-lg-6">
                    <div class="car-list-top-form-inner" style="margin-top:0px;border-radius:10px">
                        <form action="" method="post">
                          <%= token_tag %>
                          <div class="car-list-find" style="width:70%">
                            <h6>Find the Skill</h6>
                            <input type="text" name="key" placeholder="Type skill info">
                          </div>
                          <div class="car-list-submit">
                            <button type="submit" class="pink-btn" style="background-color:#333;width:140%">Find Skills</button>
                          </div>
                        </form>
                    </div>
                    <div style="height:30px"></div>
                    <div class="table-responsive table--no-card m-b-30">
                        <table style="width:100%; table-layout: fixed; overflow: hidden" class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th class="text-center" style="width:10%">Skill ID</th>
                                    <th class="text-center" style="width:20%">Level</th>
                                    <th class="text-center">Name</th>
                                </tr>
                            </thead>
                            <tbody>
                              <% @skills.each do |s| %>
                                <tr>
                                  <td class="text-center" style="width:10%">
                                    <button data-toggle="modal" data-target="#EditSkill<%= s.id %>" type="button" style="color:#555">
                                      <i class="fa fa-edit"></i>&nbsp;<%= s.id %>
                                    </button>
                                  </td>
                                  <td class="text-center" style="width:20%"><%= s.level %></td>
                                  <td class="text-left"><%= s.name %></td>
                                </tr>
                              <% end %>
                            </tbody>
                        </table>
                    </div>
                  </div>
              </div>
          </div>
        </div>
    </div>
</div>

<!--Modal-->
<% @skills.each do |s| %>
  <div class="modal fade" id="EditSkill<%= s.id %>" tabindex="-1" role="dialog" aria-labelledby="scrollmodalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="scrollmodalLabel">Edit Skill</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action="/admin/about/<%= s.id %>/skill-edit" method="post" enctype="multipart/form-data" class="form-horizontal">
          <%= token_tag %>
          <div class="modal-body">
            <!--Content-->
            <div class="card-body card-block">
              <div class="row form-group">
                <div class="col col-md-3">
                  <label class=" form-control-label">Skill ID</label>
                </div>
                <div class="col-12 col-md-9">
                  <p class="form-control-static"><%= s.id %></p>
                </div>
              </div>
              <div class="row form-group">
                <div class="col col-md-3">
                  <label for="name-input" class=" form-control-label">Skill name</label>
                </div>
                <div class="col-12 col-md-9">
                  <input type="text" required="" id="name" name="name" placeholder="Type name" class="form-control" value="<%= s.name %>">
                </div>
              </div>
              <div class="row form-group">
                <div class="col col-md-3">
                  <label for="level-input" class=" form-control-label">Skill level</label>
                </div>
                <div class="col-12 col-md-9">
                  <input type="number" required="" id="level" name="level" placeholder="Input level" class="form-control" value="<%= s.level %>">
                </div>
              </div>
            </div>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="submit" class="btn btn-primary">Confirm</button>
            <button type="button" class="btn btn-secondary" style="background-color:red;border-color:red" onclick="location.href='/admin/about/<%= s.id =%>/delete-skill'">Delete</button>
          </div>
        </form>
      </div>
    </div>
  </div>
<% end %>
<div class="modal fade" id="AddTool" tabindex="-1" role="dialog" aria-labelledby="scrollmodalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="scrollmodalLabel">Add Tool</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/admin/tool/create" method="post" enctype="multipart/form-data" class="form-horizontal">
        <div class="modal-body">
          <!--Content-->
          <div class="modal-body">
            <!--Content-->
            <div class="card-body card-block">
              <%= token_tag %>
              <div class="row form-group">
                <div class="col col-md-3">
                  <label for="text-input" class=" form-control-label">Tool name</label>
                </div>
                <div class="col-12 col-md-9">
                  <input type="text" required="" id="name" name="name" placeholder="Type name" class="form-control" value="">
                </div>
              </div>
              <div class="row form-group">
                <div class="col col-md-3">
                  <label for="text-input" class=" form-control-label">Tool image</label>
                </div>
                <div class="col-12 col-md-9">
                  <input type="file" accept="image/png | image/jpeg" required="" id="image" name="image" placeholder="Choose image" class="form-control" style="border: none" value="">
                </div>
              </div>
              <div class="row form-group">
                <div class="col col-md-3">
                  <label for="description" class=" form-control-label">Description</label>
                </div>
                <div class="col-12 col-md-9">
                  <textarea type="text-input" required="" id="description" name="description" placeholder="Content..." class="form-control" style="height: 200px;border: none"></textarea>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary" style="">Confirm</button>
        </div>
      </form>
    </div>
  </div>
</div>
